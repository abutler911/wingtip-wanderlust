<div class="container mt-5">
  <div class="row">
    <div class="col-md-12">
      <h1 class="text-center mb-4" style="color: #000">
        Posts for Highlight: <%= highlight %>
      </h1>
      <% posts.forEach(post => { %>
      <div class="card mb-4">
        <div class="card-header">
          <h2 class="card-title"><%= post.title %></h2>
        </div>
        <div class="card-body">
          <p class="card-text"><%= post.content.substring(0, 100) %>...</p>
          <a href="/explore/<%= post._id %>" class="btn btn-outline-primary"
            >Read More</a
          >
        </div>
      </div>
      <% }) %>
    </div>
  </div>
</div>
